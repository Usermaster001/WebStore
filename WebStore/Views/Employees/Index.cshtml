@model IEnumerable<WebStore.Models.Employee>

<div class="container">
    <h3>Сотрудники</h3>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Очество</th>
            <th>Возраст</th>
            <th></th>
        </tr>
        </thead>

        <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.LastName</td>
                <td>@employee.Name</td>
                <td>@employee.Patronymic</td>
                <td>@employee.Age</td>
                <td>
                    <a href="~/Home/Employee/?[0]=@employee.Id&[1]=@employee.LastName&[2]=@employee.Name&[3]=@employee.Patronymic&[4]=@employee.Age">click</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
        
    <hr/>
    <a asp-controller="Home" asp-action="Index">Главная</a>
</div>
